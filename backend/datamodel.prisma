enum Permission {
    ADMIN
    USER
    ITEMCREATE
    ITEMUPDATE
    ITEMDELETE
    PERMISSIONUPDATE
}

type User {
    createdAt: DateTime!
    updatedAt: DateTime!
    id: ID! @unique
    name: String! @unique
    email: String @unique
    password: String!
    resetToken: String
    resetTokenExpiry: Float
    permissions: [Permission]
    isPro: Boolean! @default(value: "false")
}

type OwMapType {
    mapName: OwMap!
    mapType: OwMapMode!
    subMaps: [OwControlSubMap!]
}

type OwHeroType {
    heroName: OwHero!
    position: OwHeroPosition!
    pixelImageUrl: String
    iconImageUrl: String
}

type OwStrategy @model {
    id: ID! @unique

    mapName: OwMap!
    mapMode: OwMapMode!

    defenseStrats: String
    defenseHeroes: [OwHero!]

    offenseStrats: String!
    offenseHeroes: [OwHero!]!

    creatorName: User!

    strategyName: String!

    expectedRank: OwRank

    subMap: OwControlSubMap
}

