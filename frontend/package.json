{
	"name": "strat-book-frontend",
	"version": "1.0.0",
	"description": "A StratBook for video game pros",
	"main": "index.js",
	"scripts": {
		"dev": "nodemon server.js",
		"build": "next build",
		"start": "next start -p $PORT",
		"test": "NODE_ENV=test jest --watch",
		"test-win": "SET NODE_ENV=test&& jest --watch",
		"heroku-postbuild": "next build"
	},
	"author": "Cameron Green",
	"license": "ISC",
	"dependencies": {
		"@ckeditor/ckeditor5-build-classic": "^11.2.0",
		"@ckeditor/ckeditor5-react": "^1.1.3",
		"apollo-boost": "^0.1.28",
		"apollo-client": "^2.6.0",
		"async-reactor": "^1.2.2",
		"babel-core": "^7.0.0-bridge.0",
		"date-fns": "^2.0.0-alpha.27",
		"downshift": "^2.2.3",
		"draft-js": "^0.10.5",
		"draft-js-import-markdown": "^1.3.3",
		"draftjs-md-converter": "^1.1.2",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.13.2",
		"express": "^4.17.1",
		"formik": "^1.5.7",
		"graphql": "^14.3.1",
		"graphql-tag": "^2.10.1",
		"jodit-react": "^1.0.26",
		"lodash.debounce": "^4.0.8",
		"next": "^11.1.0",
		"next-url-prettifier": "^1.4.0",
		"next-with-apollo": "^3.4.0",
		"nprogress": "^0.2.0",
		"ory-editor": "^0.6.0",
		"prop-types": "^15.7.2",
		"react": "^16.8.6",
		"react-adopt": "^0.6.0",
		"react-apollo": "^2.5.6",
		"react-dom": "^16.8.6",
		"react-markdown": "^4.0.8",
		"react-pell": "^0.4.0",
		"react-rte": "^0.16.1",
		"react-stripe-checkout": "^2.6.3",
		"react-textarea-markdown": "^1.1.3",
		"react-transition-group": "^2.9.0",
		"speakingurl": "^14.0.1",
		"styled-components": "^3.4.9",
		"waait": "^1.0.4"
	},
	"devDependencies": {
		"@babel/plugin-proposal-optional-chaining": "^7.2.0",
		"babel-jest": "^24.8.0",
		"babel-plugin-module-resolver": "^3.2.0",
		"babel-plugin-styled-components": "^1.10.0",
		"casual": "^1.6.2",
		"enzyme-to-json": "^3.3.5",
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-plugin-better-styled-components": "^1.1.1",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.13.0",
		"graphql-tools": "^4.0.4",
		"jest": "^24.8.0",
		"jest-transform-graphql": "^2.1.0",
		"nodemon": "^1.19.1"
	},
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"<rootDir>/.next/",
			"<rootDir>/node_modules/"
		],
		"transform": {
			"\\.(gql|graphql)$": "jest-transform-graphql",
			".*": "babel-jest",
			"^.+\\.js?$": "babel-jest",
			"*.js?$": "@babel/plugin-proposal-optional-chaining"
		}
	},
	"//": "This is our babel config, I prefer this over a .babelrc file",
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						},
						"@babel/plugin-proposal-optional-chaining"
					]
				]
			},
			"production": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						},
						"@babel/plugin-proposal-optional-chaining"
					]
				]
			},
			"test": {
				"presets": [
					[
						"next/babel",
						{
							"preset-env": {
								"modules": "commonjs"
							}
						}
					]
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			}
		}
	}
}
