{
    "name": "strat-book-frontend",
    "version": "1.0.0",
    "description": "A StratBook for videogame pros",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon server.js",
        "build": "next build",
        "start": "next start",
        "test": "NODE_ENV=test jest --watch",
        "test-win": "SET NODE_ENV=test&& jest --watch",
        "heroku-postbuild": "next build"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@ckeditor/ckeditor5-build-classic": "^11.2.0",
        "@ckeditor/ckeditor5-react": "^1.1.0",
        "apollo-boost": "^0.1.16",
        "apollo-client": "^2.4.2",
        "async-reactor": "^1.2.2",
        "babel-core": "^7.0.0-bridge.0",
        "babel-plugin-styled-components": "^1.7.1",
        "date-fns": "^2.0.0-alpha.7",
        "downshift": "^2.2.3",
        "draft-js": "^0.10.5",
        "draftjs-md-converter": "^1.1.1",
        "enzyme": "^3.6.0",
        "enzyme-adapter-react-16": "^1.5.0",
        "express": "^4.16.4",
        "graphql": "^14.0.2",
        "graphql-tag": "^2.9.2",
        "jodit-react": "^1.0.24",
        "lodash.debounce": "^4.0.8",
        "next": "^7.0.0",
        "next-url-prettifier": "^1.4.0",
        "next-with-apollo": "^3.1.3",
        "nprogress": "^0.2.0",
        "ory-editor": "^0.6.0",
        "prop-types": "^15.6.2",
        "react": "^16.5.2",
        "react-adopt": "^0.6.0",
        "react-apollo": "^2.2.1",
        "react-dom": "^16.5.2",
        "react-pell": "^0.4.0",
        "react-rte": "^0.16.1",
        "react-stripe-checkout": "^2.6.3",
        "react-textarea-markdown": "^1.1.3",
        "react-transition-group": "^2.5.0",
        "speakingurl": "^14.0.1",
        "styled-components": "^3.4.9",
        "waait": "^1.0.2"
    },
    "devDependencies": {
        "babel-jest": "^23.6.0",
        "babel-plugin-module-resolver": "^3.1.1",
        "casual": "^1.5.19",
        "enzyme-to-json": "^3.3.4",
        "graphql-tools": "^4.0.0",
        "jest": "^23.6.0",
        "jest-transform-graphql": "^2.1.0"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/"
        ],
        "transform": {
            "\\.(gql|graphql)$": "jest-transform-graphql",
            ".*": "babel-jest",
            "^.+\\.js?$": "babel-jest"
        }
    },
    "//": "This is our babel config, I prefer this over a .babelrc file",
    "babel": {
        "env": {
            "development": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "production": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "test": {
                "presets": [
                    [
                        "next/babel",
                        {
                            "preset-env": {
                                "modules": "commonjs"
                            }
                        }
                    ]
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            }
        }
    }
}
